@model CommentModel
<h1 class="h2">Comment</h1>
<hr>

<div class="row">
  <div class="col-md-3">
    <div>
      <i class="fa-solid fa-circle-user fa-2xl"></i>
    </div>
    @Model.UserName @Model.UserLastName
  </div>
  <div class="col-md-9">
    <form asp-controller="Comment" asp-action="commentcreate" method="post">
      <input type="hidden" name="OrderItemId" value="@Model.OrderItemId">
      <input type="hidden" name="userId" value="@Model.UserId">
      

      <div class="form-group row mb-3">
        <label class="col-sm-1 col-form-label" asp-for="Text"></label>
        <div class="col-sm-11">
          <textarea id="editor" class="form-control" asp-for="Text" rows="10"></textarea>
        </div>
      </div>

      <div class="form-group row mb-3">
        <div class="col-sm-11 offset-sm-1">
          <button type="submit" class="btn btn-primary">Save Comment</button>
        </div>
      </div>

    </form>
  </div>
</div>

